	#v=$( curl -s https://ftp.denx.de/pub/u-boot/ | sed 's/.*href="\([^"]*\).*/\1/p' | grep u-boot)
	# echo $v
	exit 1
	###### git clone --progress --verbose https://github.com/u-boot/u-boot 2>&1\
	#| zenity --width=500 --height=100 --progress --title="Downloading File."
	#cd u-boot/

